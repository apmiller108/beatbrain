{
  "name": "beatbrain",
  "version": "0.1.0",
  "description": "Smart playlist creator for DJs",
  "main": "./out/main/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write 'src/**/*.{js,mjs,jsx}'",
    "start": "npm run rebuild && electron-vite preview",
    "dev": "npm run rebuild  && electron-vite dev",
    "build": "npm run rebuild && electron-vite build",
    "rebuild": "rm -rf node_modules/better-sqlite3/build && electron-rebuild",
    "purge:sqlite": "rm -rf node_modules/better-sqlite3/build-*",
    "test": "npm rebuild && vitest run",
    "test:ui": "npm rebuild && vitest --ui",
    "test:watch": "npm rebuild && vitest",
    "test:coverage": "npm rebuild && vitest run --coverage",
    "test:e2e": "npm rebuild && NODE_ENV=test playwright test",
    "test:e2e:ui": "npm rebuild && NODE_ENV=test playwright test --ui",
    "test:e2e:debug": "npm rebuild && NODE_ENV=test playwright test --debug",
    "audit": "npm audit",
    "schema:dump": "electron ./scripts/schema-dump.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apmiller108/beatbrain.git"
  },
  "author": "Alex P. Miller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/apmiller108/beatbrain/issues"
  },
  "homepage": "https://github.com/apmiller108/beatbrain#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/eslint-plugin": "^1.3.12",
    "@vitest/ui": "^3.2.4",
    "electron": "^37.2.6",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^4.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "better-sqlite3": "^12.2.0",
    "bootstrap": "^5.3.7",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-bootstrap-icons": "^1.11.6",
    "react-dom": "^19.1.1",
    "react-select": "^5.10.2",
    "react-window": "^2.2.3"
  }
}
